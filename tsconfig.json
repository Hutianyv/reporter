{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "outDir": "dist",
    "target": "ES6",
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "declaration": true,

    /* modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "importHelpers": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
